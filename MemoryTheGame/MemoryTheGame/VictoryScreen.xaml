<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MemoryTheGame.VictoryScreen">
    <StackLayout HorizontalOptions="CenterAndExpand" Spacing="20" Padding="0, 50">
        <Label Text="You won!" FontSize="40" HorizontalTextAlignment="Center"/>
        <Label x:Name="scoreLabel" HorizontalTextAlignment="Center"/>
        <Label x:Name="movesLabel" HorizontalTextAlignment="Center"/>
        <Label x:Name="timeLabel" HorizontalTextAlignment="Center"/>
        <Entry x:Name="entry" Placeholder="Enter your name..." Margin="0, 20"/>
        <StackLayout Margin="0, 50">
            <Button Text="Play Again" TextColor="White" BackgroundColor="#2196F3" Clicked="PlayAgain_Clicked"/>
            <Button Text="Main Menu" TextColor="White" BackgroundColor="#2196F3" Clicked="Menu_Clicked"/>
            <Button Text="Highscores" TextColor="White" BackgroundColor="#2196F3" Clicked="Highscores_Clicked"/>
        </StackLayout>
    </StackLayout>
</ContentPage>