<?xml version="1.0" encoding="utf-8" ?>
<ContentPage  Title="Highscore"
             xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MemoryTheGame.HighScoreDetail">
    <StackLayout Padding="20">
        <Label FontSize="Medium" Text="{Binding Id, StringFormat='Id:{0}'}"/>
        <Label FontSize="Large" Text="{Binding playerName, StringFormat='Player Name: {0}'}"/>
        <Label FontSize="Medium" Text="{Binding score, StringFormat='Score: {0:F}'}" Margin="0, 10, 0, 0"/>
        <Label FontSize="Medium" Text="{Binding moves, StringFormat='Moves: {0}'}"/>
        <Label FontSize="Medium" Text="{Binding duration, StringFormat='Time: {0:H:mm:ss}'}"/>
        <Label FontSize="Medium" Text="{Binding dateTime, StringFormat='Date: {0:MMM dd, yyyy} {0:H:mm:ss}'}" Margin="0, 10, 0, 0"/>
    </StackLayout>
</ContentPage>